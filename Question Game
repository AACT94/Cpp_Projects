#include <iostream>

using namespace std;

void newQuestion(string question,string answer,int repetitions){
    system("clear");
    string userAnswer;
    do {
        cout << question << ": ";
        getline(cin,userAnswer);
        if (userAnswer == answer){
            repetitions --;
            system("clear");
            cout << "Correct," << repetitions << " more times to finish," << endl;
        }
        else {
            cout << "Wrong, Try Again\n";
        }
    } while (repetitions > 0);
    cout <<"End Trial" << flush;
}

int main()
{
    newQuestion("Syntax for clearing the screen in Cpp","system(\"cls\")",10);
    newQuestion("Circle Of Fifths","C G D A E B F#/Gb Db Ab Eb Bb F",1);
    newQuestion("Circle Of Fourths","C F Bb Eb Ab Db Gb/F# B E A D G",1);
}
